.navbar.navbar-default.navbar-fixed-top(role='navigation' ng-controller="HeaderCtrl")
                .container
                    .navbar-header
                        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href='/') Pasteye BETA
                    .collapse.navbar-collapse
                        ul.nav.navbar-nav.navbar-right
                            li(ng-class="navClass('/') || navClass('/app')")
                                a(href='/') Home
                            li(ng-class="navClass('/beta')")
                                a(href='/beta') Beta
                            li(ng-class="navClass('/signup')")
                                a(href='/signup') Signup
                            li(ng-hide="isLoggedIn()" ng-class="navClass('/login')")
                                a(href='/login') Login
                            li(ng-show="isLoggedIn()")
                                a(href='/logout') Logout
